<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Colour</th>
      <th>Description</th>
      <th>Base</th>
      <th>Dryingtime</th>
      <th>Coverage</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.name %></td>
        <td><%= ad.size %></td>
        <td><%= ad.colour %></td>
        <td><%= ad.description %></td>
        <td><%= ad.base %></td>
        <td><%= ad.dryingtime %></td>
        <td><%= ad.coverage %></td>
        <td><%= ad.image %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
